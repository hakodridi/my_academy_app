<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".activities.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="15mm"
            android:layout_height="15mm"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle"
                android:backgroundTint="#99ECECEC"
                >

                <ImageView
                    android:layout_width="4mm"
                    android:layout_height="4mm"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_user"
                    app:tint="@color/gray300" />
            </RelativeLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="200dp"
                />
            <RelativeLayout
                android:id="@+id/edit_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/secondary"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_edit_solid"
                    app:tint="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                >

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_name_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/email_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="example@mail.com"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/password_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="•••••••••••••"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_password_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="09 98 87 76 65"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_phone_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/wilaya_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="wilaya"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_wilaya_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/commune_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="commune"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_commune_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:background_Type="fill"
                    app:background_Color="@color/white"
                    app:cornerRadius="12dp"
                    app:shadow0_Outer_Blur="4dp"
                    app:shadow0_Outer_Alpha="0.06"
                    app:shadow0_Outer_Angle="-45"
                    app:shadow0_Outer_Distance="4dp"
                    app:shadow0_Outer_Color="#2C4EB3"
                    app:shadow1_Outer_Blur="4dp"
                    app:shadow1_Outer_Alpha="0.15"
                    app:shadow1_Outer_Color="#A5A5A5"
                    app:shadow1_Outer_Distance="4dp"
                    app:shadow1_Outer_Angle="135"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        >
                        <TextView
                            android:id="@+id/address_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Address\n\n"
                            android:textColor="@color/gray800"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:id="@+id/edit_address_btn"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/ic_edit_solid"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </com.sinaseyfi.advancedcardview.AdvancedCardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    />


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/home_menu_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/primary"
                    />
                <ImageView
                    android:id="@+id/profile_menu_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user_solid"
                    app:tint="@color/primary"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"
            app:tint="@color/danger"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:textSize="16sp"
            android:textColor="@color/danger"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
</RelativeLayout>